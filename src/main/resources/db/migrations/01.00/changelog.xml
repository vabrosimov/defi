<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        logicalFilePath="changelog.xml">

    <changeSet id="01.00.00" author="Abrosimov V.R.">
        <!-- самый первый тег, чтобы "мягко" (без dropAll) откатить все скрипты БД -->
        <tagDatabase tag="00.00"/>
    </changeSet>

    <include file="01.pool_ddl.sql" relativeToChangelogFile="true"/>
    <include file="02.protocol_ddl.sql" relativeToChangelogFile="true"/>
    <include file="03.pool_apy_history_ddl.sql" relativeToChangelogFile="true"/>
    <include file="04.pool_with_apy_history.sql" relativeToChangelogFile="true"/>

    <changeSet id="01.00.last" author="Abrosimov V.R.">
        <!-- закрывающий тег релиза, чтобы всегда можно было откатить БД до текущего релиза -->
        <tagDatabase tag="01.00"/>
    </changeSet>

</databaseChangeLog>

